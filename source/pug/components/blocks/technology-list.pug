mixin technology-list()
  section.technology-list(data-animate-technology-list)
    h2.visually-hidden My technology stack
    .container.container--slim
      .technology-list__title-col
        .locomotive-sticky#technology-list-sticky
        .technology-list__sticky.sticky-block(data-scroll-target="#technology-list-sticky" data-scroll data-scroll-sticky)
          .technology-list__title-container
            p.technology-list__title-quote.title.title--medium(data-animate-technology-list="quote") Рђю
            each item in listData.items
              p.technology-list__title.title.title--small.title--lowercase(data-animate-technology-list="title", data-splitting)!=item.title

      .technology-list__description-col
        each item in listData.items
          .technology-list__description-container(data-animate-technology-list="description")
            p.technology-list__description.title.title--medium.title--lowercase!=item.description

